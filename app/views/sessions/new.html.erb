<center>
    <div id="forms">
        <div id="session_login">
            <div class="container">
                <h4>Login</h4>
                <div class="row">
                    <div class="col-xs-10">
                        <%= form_for @user, url: "/sessions", method: "post" do |f| %>
                        <div>
                            <%= f.text_field :email, placeholder: "Email" %>
                        </div>
                        <div>
                            <%= f.password_field :password, placeholder: "Password" %>
                        </div>
                        <%= f.submit "Sign In" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</center>


  <h4>Edit Profile</h4>
    <div class="row">
      <div class="col-xs-10">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :first_name %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :first_name, placeholder: "First Name" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :last_name %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :last_name, placeholder: "Last Name" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :username %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :username, placeholder: "Username" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :email %>
            </div>
            <div class="col-sm-8">
              <%= f.text_field :email, placeholder: "Email" %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :avatar %>
            </div>
            <div class="col-sm-8">
              <%= f.file_field :avatar %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :submit %>
            </div>
            <div class="col-sm-8">
              <%= f.submit "Submit", class: "btn btn-primary" %>
              <%= link_to "Cancel", :back, class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
        <hr />
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= link_to "Delete Account", user_path, class: "btn btn-danger", method: :delete %>
          </div>
        </div>
      </div>
    </div>
